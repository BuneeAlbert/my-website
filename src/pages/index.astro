---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import SplitPanel from '../components/sections/SplitPanel.astro';
import Features from '../components/sections/Features.astro';
import Stats from '../components/sections/Stats.astro';
import { featureLists } from '../data/features';
import { statsLists } from '../data/stats';
import Logos from '../components/sections/Logos.astro';
import { logoLists } from '../data/logos';
import CtaBanner from '../components/sections/CtaBanner.astro';
import Faqs from '../components/sections/Faqs.astro';
import { faqLists } from '../data/faqs';
import RecentPosts from '../components/sections/RecentPosts.astro';

const seoTitle = "Modern, High-Performance Astro Theme";
const seoDescription = "A modern, high-performance Astro theme for developer portfolios and documentation sites.";

const heroContent = {
    title: 'Build Faster with Titan Core',
    description: ' A modern, high-performance Astro theme for developer portfolios and documentation sites.',
    button: {
        text: 'Get Started',
        link: '/contact',
        target: '_self'
    },
    backgroundImage: '/home/default-hero-2.jpg',
    overlayOpacity: 0.2
}

const FooterCta = {
    title: 'This is Footer CTA',
    description: 'This is Footer CTA Description',
    hideCta: false,
    button: {
        text: 'Contact Us',
        link: '/contact',
        target: '_self'
    }
}

const aboutSection = {
    eyebrow: "About",
    headline: "About Titan Core",
    subheadline: "We are a team of developers who are passionate about building amazing websites with ease.",
    description: "Our platform is designed to help developers and agencies build amazing websites with ease. Packed with features and optimized for performance.",
    image: {
        src: "/home/about.jpg",
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Get Started",
            link: "/contact",
            variant: "primary" as const
        },
        {
            text: "Learn More",
            link: "/about",
            variant: "secondary" as const
        }
    ]
}

const whoWeAreSection = {
    eyebrow: "Who We Are",
    headline: "Developers who are passionate about building amazing websites.",
    subheadline: "High-performance Astro theme for developers.",
    description: "Focused on providing a modern, high-performance Astro theme for developer portfolios and documentation sites.",
    image: {
        src: "/home/developer.jpg",
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Get Started",
            link: "/contact",
            variant: "primary" as const
        },
        {
            text: "Learn More",
            link: "/about",
            variant: "secondary" as const
        }
    ]
}

const teamSection = {
    eyebrow: "Our Team",
    headline: "Meet the Team",
    subheadline: "Passionate about building amazing websites with ease.",
    description: "Focused on providing a modern, high-performance Astro theme for developer portfolios and documentation sites.",
    image: {
        src: "/home/meet-the-team.jpg",
        alt: "Featured image"
    },
    buttons: [
        {
            text: "Meet the Team",
            link: "/team",
            variant: "primary" as const
        }
    ]
} 

const featuresSection = {
    sectionTitle: "What makes Titan Core special?",
    sectionDescription: "Focused on providing a modern, high-performance Astro theme for developer portfolios and documentation sites.",
    features: featureLists.main.features,
    button: {
        text: "View All Features",
        link: "/features",
        variant: "primary" as const
    }
}

const sideBySideStats = {
    variant: 'side-by-side' as const,
    background: 'dark' as const,
    stats: statsLists.withContent.stats,
    content: statsLists.withContent.content
}

const mainCta = {
    title: "Ready to Get Started?",
    description: "Join thousands of developers building amazing websites with Titan Core.",
    button: {
        text: "Start Building",
        link: "/contact",
        variant: "primary" as const,
        target: "_self" as const
    }
};

const secondaryCta = {
    title: "Join Our Community",
    description: "Connect with other developers and get help with your projects.",
    button: {
        text: "Join Discord",
        link: "https://discord.com",
        variant: "secondary" as const,
        target: "_blank" as const
    }
};

const logosSection = {
    eyebrow: "Our Clients",
    headline: "Trusted by many",
    subheadline: "We are trusted by many companies around the world.",
    logos: logoLists.main.logos
}

const faqsSection = {
    title: faqLists.main.title,
    description: faqLists.main.description,
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    sectionTitle: "Latest Blog Posts",
    sectionDescription: "Check out our most recent articles",
    button: {
            text: "View All Posts",
            link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero heroContent={heroContent} />
    <Stats statsContent={sideBySideStats} padding="base" />
    <Logos logosContent={logosSection} background="white" paddingBottom='small'/>
    <SplitPanel content={aboutSection} imagePosition="right" background="light" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" />
    <SplitPanel content={whoWeAreSection} imagePosition="right" background="light" padding="base" />
    <SplitPanel content={teamSection} imagePosition="left" background="dark" padding="base" />
    <Features featuresContent={featuresSection} padding="base" background="light"  />
    <CtaBanner content={secondaryCta} variant="full-width" background="dark" padding="base" />
    <Faqs faqsContent={faqsSection} background="white" padding="base" />
    <RecentPosts sectionContent={recentPostsSection} background="dark" padding="base" postsToShow={3} category="Theme Usage"/>
</Layout>