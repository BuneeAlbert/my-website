---
interface Props {
    label: string;
    type?: 'text' | 'email' | 'tel' | 'password' | 'number';
    id: string;
    name: string;
    placeholder?: string;
    required?: boolean;
    class?: string;
}

const { 
    label, 
    type = 'text', 
    id, 
    name, 
    placeholder = '', 
    required = false,
    class: className = ''
} = Astro.props;
---
<div class="form-group">
    <label 
        for={id} 
        class="block text-sm font-medium text-gray-700 mb-1"
    >
        {label}
        {required && <span class="text-red-500">*</span>}
    </label>
    <input 
        type={type}
        id={id}
        name={name}
        placeholder={placeholder}
        required={required}
        class={`w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 ${className}`}
    />
</div> 