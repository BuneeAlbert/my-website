---
interface Option {
    label: string;
    value: string;
}

interface Props {
    label: string;
    id: string;
    name: string;
    options: Option[];
    required?: boolean;
    class?: string;
}

const { 
    label, 
    id,
    name, 
    options,
    required = false,
    class: className = ''
} = Astro.props;
---
<div class="form-group">
    <label class="block text-sm font-medium text-body-base mb-2">
        {label}
        {required && <span class="text-red-500">*</span>}
    </label>
    <div class="space-y-2">
        {options.map((option, index) => (
            <div class="flex items-center space-x-2">
                <input
                    type="radio"
                    id={`${id}-${index}`}
                    name={name}
                    value={option.value}
                    required={required}
                    class={`h-4 w-4 border-gray-300 text-primary focus:ring-primary ${className}`}
                />
                <label 
                    for={`${id}-${index}`}
                    class="text-sm font-medium text-body-base"
                >
                    {option.label}
                </label>
            </div>
        ))}
    </div>
</div> 