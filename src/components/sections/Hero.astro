---
import Button from '@components/ui/Button.astro';
interface HeroContent {
    title: string;
    description: string;
        buttons?: {
        text: string;
        link: string;
        variant?: 'primary' | 'secondary' | 'ghostLight' | 'ghostDark';
        target?: string;
    }[];
    backgroundImage?: string;
    overlayOpacity?: number; // Value between 0 and 1
}

interface Props {
    heroContent: HeroContent;
}

const { heroContent } = Astro.props;
const opacity = heroContent.overlayOpacity ?? 1; // Default opacity if not specified
---

<section class="header-offset relative">
    {heroContent.backgroundImage && (
        <div 
            class="absolute inset-0 left-0 top-0 w-full h-full overflow-hidden bg-cover bg-center bg-no-repeat" 
            style={`background-image: url(${heroContent.backgroundImage});`}
        >
        </div>
    )}
    <div 
        class="hero-background absolute inset-0 left-0 top-0 w-full h-full overflow-hidden" 
        style={`opacity: ${opacity};`}
    ></div>

    <div class="site-container mx-auto px-4 py-large relative z-10 flex flex-col md:items-center md:justify-center md:text-center">
        <h1 class="text-white" data-aos="fade-up">{heroContent.title}</h1>
        <p class="text-white mt-2" data-aos="fade-up" data-aos-delay="100">{heroContent.description}</p>
        {heroContent.buttons && heroContent.buttons.length > 0 && (
            <div class="flex flex-wrap gap-4 mt-8" data-aos="fade-up">
                {heroContent.buttons.map((button) => (
                    <Button
                        href={button.link}
                        target={button.target || '_self'}
                        variant={button.variant || 'primary'}
                    >
                        {button.text}
                    </Button>
                ))}
            </div>
        )}
    </div>
</section>